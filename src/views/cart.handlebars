<main>
  <div class="cart__container">
    <h2>Carrito:</h2>
    {{#each cart}}
      <div class="cart__products">
        <div class="product__card">
          <img src={{this.product.thumbnail}} alt="product__image" />
          <div class="product__card--info">
            <h4>Name: {{this.product.title}}</h4>
            <h5>Price: ${{this.product.price}}</h5>
            <p>Units: {{this.quantity}}</p>
          </div>
        </div>
        <button class="cart__deleteBtn" id="cart__product--deleteBtn" value={{this.product._id}}>Eliminar</button>
      </div>
    {{/each}}
    <div class="cart__total">
      <h2>Total:</h2>
      <div class="cart__menu">
        <button class="cart__total--btn">Vaciar</button>
        <button class="cart__total--btn">Comprar</button>
      </div>
    </div>
  </div>
</main>
<script src="/js/cart.js"></script>